        background: url('../img/hero-girl-desktop.png') 92% 29px no-repeat, url('../img/hero-bcg-desktop.svg') left -5px no-repeat;
        margin-bottom: 96px;
    }

    &__inner {
        margin-top: -73px;
        padding: 0 15px;

        @media screen and (min-width: 764px) {
            padding-left: 62px;
            width: 60%;
            max-width: 450px;
            margin-top: -9px;
        }

        @media screen and (min-width: 1200px) {
            padding-left: 100px;
            margin-top: -85px;
        }
    }

    &__title {
        color: var(--primaryColor);
        font-size: 30px;
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 3.1px;
        margin-bottom: 22px;

        @media screen and (min-width: 764px) {
            font-size: 48px;
            margin-bottom: 45px;
        }

        @media screen and (min-width: 1200px) {
            font-size: 58px;
            letter-spacing: 4.36px;
            margin-bottom: 21px;
        }

        &::before {
            content: none;
        }
    }

    &__slogan {
        display: none;

        @media screen and (min-width: 764px) {
            display: block;
            color: var(--primaryColor);
            font-size: 18px;
            font-weight: 300;
            margin-bottom: 48px;
        }
    }

    &__btn {
        display: inline-block;
        text-decoration: none;
        border: 2px solid var(--primaryColor);
        border-radius: 19px;
        font-family: 'SF UI Text', sans-serif;
        font-size: 11px;
        font-weight: 500;
        color: var(--primaryColor);
        padding: 11px 14px;

        @media screen and (min-width: 764px) {
            position: relative;
            font-size: 14px;
            border-radius: 27px;
            padding: 18px 44px;
        }

        &::after {
            @media screen and (min-width: 764px) {
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                right: -40px;
                content: '';
                display: block;
                width: 74px;
                height: 14px;
                /*noinspection CssInvalidFunction*/
                background: inline('arrow.png') center no-repeat;
