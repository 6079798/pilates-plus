            background: var(--secondaryColor);
            color: var(--primaryColor);
            box-shadow: 0 6px 15px rgba(33, 33, 33, 0.2);
            margin-bottom: 0;
            padding: 30px 38px 37px;
        }

        @media screen and (min-width: 1200px) {
            padding: 64px 70px;
        }
    }

    &__item {
        margin-bottom: 23px;

        @media screen and (min-width: 764px) {
            margin-bottom: 35px;
        }

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__subtitle {
        color: var(--textColor);
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 10px;

        @media screen and (min-width: 764px) {
            color: var(--primaryColor);
            font-size: 18px;
        }
    }

    &__map {
        position: relative;
        height: 279px;
        background: url("../img/map.png") center no-repeat;
        margin-left: -15px;
        width: calc(100% + 30px);

        @media screen and (min-width: 764px) {
            height: 355px;
            margin-left: -62px;
            width: calc(100% + 124px);
        }

        @media screen and (min-width: 1200px) {
            height: 513px;
            margin-left: -100px;
            width: calc(100% + 200px);
        }
    }

    &__marker {
        position: absolute;
        top: 39px;
        left: calc(50% + 102px);
        width: 24px;
        height: 35px;

        @media screen and (min-width: 764px) {
            top: 74px;
        }

        @media screen and (min-width: 1200px) {
            top: 147px;
        }
    }
}

.footer {
    background: var(--secondaryColor);
    padding: 42px 0 8px;
    display: flex;
    flex-direction: column;
    align-items: center;

    @media screen and (min-width: 764px) {
        padding: 17px 20px;
        flex-direction: row;
    }

    @media screen and (min-width: 1200px) {
        padding: 40px 100px;
    }

    &__logo {
        margin-bottom: 8px;

        @media screen and (min-width: 764px) {
            margin-bottom: 0;
            flex-shrink: 0;
        }

        img {
            @media screen and (min-width: 1200px) {
                width: 62px;
            }
        }

        .logo__text {
            @media screen and (min-width: 1200px) {
                font-size: 12px;
                line-height: 1.84;
                letter-spacing: 1.31px;
            }
        }
    }

    &__social {
        list-style-type: none;
        margin-bottom: 35px;

        @media screen and (min-width: 764px) {
            margin-bottom: 0;
            flex-basis: 50%;
            text-align: right;
        }

        li {
            display: inline-block;
        }
    }

    &__link {
        display: block;
        position: relative;
        width: 24px;
        height: 24px;
        transition: var(--baseTransition);

        @media screen and (min-width: 1200px) {
            width: 32px;
            height: 32px;
        }

        &:hover {
            opacity: 0.8;
        }

        svg {
            position: absolute;
            fill: var(--primaryColor);
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
        }

        &--vk {
            svg {
                width: 20px;
                height: 11px;

                @media screen and (min-width: 1200px) {
                    width: 25px;
                    height: 14px;
                }
            }

        }

        &--fb {
            svg {
                width: 8px;
                height: 15px;

                @media screen and (min-width: 1200px) {
                    width: 10px;
                    height: 20px;
                }
            }
        }

        &--inst {
            svg {
                width: 13px;
                height: 13px;

                @media screen and (min-width: 1200px) {
                    width: 17px;
                    height: 17px;
                }
            }
        }
    }

    &__copyright {
        color: #fefefe;
        font-size: 10px;
        letter-spacing: 1.2px;

        @media screen and (min-width: 764px) {
            order: -1;
            flex-basis: 50%;
        }

        @media screen and (min-width: 1200px) {
            font-size: 14px;
        }
    }
}

.form {
    padding: 0 45px;

    &__group {
        position: relative;
        margin-bottom: 30px;

        &:last-of-type {
            margin-bottom: 36px;
        }

        &--checkbox {
            margin-left: -25px;
            width: calc(100% + 50px);

            .form__checkbox:checked + .form__label--checkbox::after {
                content: ''
            }

            .form__checkbox + .form__label--checkbox::after {
                content: none;
            }
        }
    }

    &__input {
        position: relative;
        background: none;
        border: none;
        border-bottom: 2px solid var(--textColor);
        display: block;
        font-size: 16px;
        outline: none;
        padding: 10px 0;
        width: 100%;
        z-index: 2;

        &:focus {
            outline: none;
        }
    }

    &__checkbox {
        opacity: 0;
    }

    &__label {
        color: var(--textColor);
        left: 0;
        position: absolute;
        top: 7px;
        transition: all 0.15s ease-in;

        &--checkbox {
            position: relative;
            top: 0;

            &::before {
                position: absolute;
                top: -4px;
                left: -30px;
                content: '';
                display: inline-block;
                height: 22px;
                width: 22px;
                background: var(--secondaryColor);
            }

            &::after {
                position: absolute;
                top: 2px;
                left: -23px;
                content: "";
                display: inline-block;
                height: 5px;
                width: 7px;
                border-left: 2px solid var(--primaryColor);
                border-bottom: 2px solid var(--primaryColor);
                transform: rotate(-45deg);
            }
        }

        &--active {
            font-size: 12px;
            top: -14px;
        }
    }

    &__submit {
        cursor: pointer;
        border: none;
        outline: none;
        border-radius: 18px;
        background-color: var(--secondaryColor);
        color: var(--primaryColor);
        font-family: "SF UI Text", sans-serif;
        font-size: 14px;
        font-weight: 500;
        padding: 10px 44px;

        &:disabled {
            background: #8993ad;
        }
    }

    &__error {
        display: block;
        font-size: 12px;
        font-weight: 300;
        padding-top: 5px;
        color: red;
    }
}

.modal {
    display: none;

    &.is-open {
        display: block;
    }

    &__overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 100;
        min-width: 320px;
        overflow: scroll;
    }

    &__inner {
        text-align: center;
        position: relative;
        background: #fff;
        padding: 93px 15px 52px;
        width: 90%;
        max-width: 1165px;
        max-height: 90vh;
        overflow-y: auto;

        @media screen and (min-width: 1200px) {
            padding: 100px;
        }
    }

    &__title {
        color: var(--textColor);
        font-family: "Proxima Nova Lt", sans-serif;
        font-size: 24px;
        font-weight: 400;
        margin-bottom: 29px;
    }

    &__subtitle {
        color: var(--textColor);
        font-family: "Proxima Nova Rg", sans-serif;
        font-size: 14px;
        font-weight: 400;
        margin-bottom: 30px;
    }

    &__close {
        cursor: pointer;
        position: absolute;
        top: 30px;
        right: 30px;
        border: none;
        outline: none;
        width: 24px;
        height: 24px;
        /*noinspection CssInvalidFunction*/
        background: transparent inline('close.svg') center center/17px 17px no-repeat;
    }
}

.success-message {
    &__title {
        font-size: 32px;
        margin-bottom: 20px;
        color: var(--secondaryColor);

        @media screen and (min-width: 764px) {
            font-size: 48px;
            font-weight: 400;
        }
    }
}