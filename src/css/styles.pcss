:root {
    --primaryColor: #fff;
    --secondaryColor: #91aa59;
    --textColor: #212121;
    --titleColor: #000;
    --baseTransition: all 0.2s ease-in-out;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.page {
    min-width: 320px;
    background: var(--primaryColor);
    color: var(--textColor);
    font-family: 'SF UI Text', sans-serif;
    font-size: 14px;
    font-weight: 300;

    @media screen and (min-width: 764px) {
        font-size: 16px;
    }

    &--no-scroll {
        height: 100vh;
        overflow: hidden;
    }

    &__container {
        position: relative;
        max-width: 1366px;
        margin: auto;
    }
}

.logo {
    display: flex;
    flex-direction: column;
    align-items: center;

    img {
        display: block;
        width: 36px;
    }

    &__text {
        color: var(--primaryColor);
        font-size: 8px;
    }
}

.nav-btn {
    cursor: pointer;
    border: none;
    outline: none;
    background: transparent;
    width: 24px;
    height: 24px;
    z-index: 101;
    flex-shrink: 0;

    &:hover {
        .nav-btn__bar--top {
            width: 100%;
        }
    }

    &--active {
        .nav-btn__bar--top {
            width: 100%;
            transform: rotate(42deg);
            transform-origin: left;
        }

        .nav-btn__bar--middle {
            opacity: 0;
            transform: translateX(20px);
        }

        .nav-btn__bar--bottom {
            transform: rotate(-45deg);
            transform-origin: left;
        }
    }

    &__bar {
        display: block;
        height: 2px;
        background: var(--primaryColor);
        margin-bottom: 6px;
        transition: var(--baseTransition);

        &:last-child {
            margin-bottom: 0;
        }

        &--top {
            width: 60%;
        }
    }
}

.nav {
    background: color(var(--secondaryColor) alpha(90%));
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    left: 0;
    top: 0;
    width: 100%;
    overflow: hidden;
    position: fixed;
    transition: var(--baseTransition);
    z-index: 100;
    transform: translateX(-100%);

    &--shown {
        transform: translateX(0);
        overflow: auto;
    }

    &__links {
        list-style-type: none;
    }

    &__link {
        margin-bottom: 60px;

        &:last-child {
            margin-bottom: 0;
        }

        a {
            display: block;
            position: relative;
            color: var(--primaryColor);
            font-family: 'Roboto', sans-serif;
            font-size: 18px;
            font-weight: 700;
            text-decoration: none;

            @media screen and (min-width: 1200px) {
                font-size: 48px;
            }

            &::before {
                position: absolute;
                top: 50%;
                left: -50px;
                transform: translateY(-50%);
                display: block;
                content: '';
                width: 9px;
                height: 9px;
                border-radius: 50%;
                background: var(--primaryColor);
                opacity: 0;
                transition: var(--baseTransition);

                @media screen and (min-width: 1200px) {
                    width: 16px;
                    height: 16px;
                    left: -100px;
                }
            }

            &:hover {
                &::before {
                    left: -20px;
                    opacity: 1;

                    @media screen and (min-width: 1200px) {
                        left: -41px;
                    }
                }
            }
        }
    }
}

.header {
    position: absolute;
    top: 14px;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;

    @media screen and (min-width: 764px) {
        padding: 0 62px;
        top: 23px;
    }

    @media screen and (min-width: 1200px) {
        padding: 0 100px;
        top: 28px;
    }

    &__logo {
        flex-basis: 50%;
        align-items: flex-start;

        img {
            @media screen and (min-width: 764px) {
                width: 50px;
            }

            @media screen and (min-width: 1200px) {
                width: 62px;
            }
        }

        .logo__text {
            @media screen and (min-width: 764px) {
                font-size: 10px;
                line-height: 1.78;
                letter-spacing: 1.31px;
            }

            @media screen and (min-width: 1200px) {
                font-size: 12px;
                line-height: 1.84;
            }
        }
    }

    &__phone {
        display: none;

        @media screen and (min-width: 370px) {
            display: block;
            color: var(--textColor);
            font-size: 16px;
            font-weight: 700;
            flex-basis: 50%;
            text-align: right;
        }

        @media screen and (min-width: 1200px) {
            font-size: 14px;
        }
    }
}

.title {
    position: relative;
    font-family: 'Roboto', sans-serif;
    font-size: 18px;
    font-weight: 500;
    color: var(--titleColor);
    display: flex;
    align-items: center;

    @media screen and (min-width: 764px) {
        font-size: 24px;
    }

    @media screen and (min-width: 1200px) {
        font-size: 48px;
        font-weight: 400;
    }

    &::before {
        display: inline-block;
        content: '';
        width: 17px;
        height: 1px;
        background: var(--titleColor);
        margin-right: 10px;

        @media screen and (min-width: 764px) {
            height: 2px;
            width: 37px;
            margin-right: 17px;
        }
    }
}

.text {
    margin-bottom: 14px;

    @media screen and (min-width: 764px) {
        margin-bottom: 22px;
    }

    @media screen and (min-width: 1200px) {
        line-height: 1.5;
    }

    &:last-child {
        margin-bottom: 0;
    }
}

.hero {
