    &__price {
        font-size: 16px;
        font-weight: 700;
        margin-bottom: 20px;

        @media screen and (min-width: 1200px) {
            font-size: 24px;
        }

        @media screen and (min-width: 1200px) {
            margin-bottom: 24px;
        }
    }

    &__time {
